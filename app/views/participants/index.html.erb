<%= render "layouts/navbar" %>
<div class="container" style="padding-top: 80px;">
  <h1>参加者一覧</h1>
  <hr>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>参加者名</th>
        <th>ハンデ</th>
        <th>FCメンバー / FC関係者</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @participants.each do |participant| %>
        <tr>
          <td><%= participant.name %></td>
          <td><%= participant.handicap %></td>
          <td><%= participant.isMember ? "FCメンバー" : "FC関係者" %></td>
          <% if logged_in? then %>
            <td><%= link_to "編集", edit_participant_path(participant) %></td>
          <% else %>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if logged_in? then %>
    <div class="mt-3 mb-3">
      <%= link_to "追加", new_participant_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
