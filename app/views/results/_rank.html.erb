<div class="card border-light shadow mb-3">
  <div class="d-flex flex-row p-2">
    <div class="align-self-center py-2 px-3" style="font-size:50px;width:90px"> <%= rank %> </div>
    <div class="d-flex flex-column p-3">
      <div class="d-flex flex-row">
        <h3 class="bd-highlight p-2"> <%= result.name %> </h3>
      </div>
      <div class="d-flex flex-row">
        <div class="bd-highlight p-2" style="font-size:20px"> <%= "#{result.cumulative_total_point} pt" %> </div>
        <div class="bd-highlight align-self-center ps-2 py-2 d-none d-lg-block" style="font-size:15px"> ( </div>
        <div class="bd-highlight align-self-center p-2 d-none d-lg-block" style="font-size:15px"> <%= "ハンデ：#{result.handicap} pt" %> </div>
        <div class="bd-highlight align-self-center p-2 d-none d-lg-block" style="font-size:15px"> <%= "順位pt：#{result.cumulative_rank_point} pt" %> </div>
        <div class="bd-highlight align-self-center p-2 d-none d-lg-block" style="font-size:15px"> <%= "スコアpt：#{result.cumulative_game_point} pt" %> </div>
        <div class="bd-highlight align-self-center pe-2 py-2 d-none d-lg-block" style="font-size:15px"> ) </div>
      </div>
    </div>
  </div>
</div>
