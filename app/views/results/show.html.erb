<%= render "layouts/navbar" %>
<div class="container" style="padding-top: 80px;">
  <h1><%= @participant.name %> さんのページ </h1>

  <h2 class="mt-5"> 対局結果一覧 </h2>
  <hr>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>対局日</th>
        <th>1位</th>
        <th></th>
        <th>2位</th>
        <th></th>
        <th>3位</th>
        <th></th>
        <th>4位</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @scores.each do |score| %>
        <tr>
          <td><%= score.date %></td>
          <td><%= participant_name(score.first_participantID) %></td>
          <td><%= score.first_score %>点</td>
          <td><%= participant_name(score.second_participantID) %></td>
          <td><%= score.second_score %>点</td>
          <td><%= participant_name(score.third_participantID) %></td>
          <td><%= score.third_score %>点</td>
          <td><%= participant_name(score.fourth_participantID) %></td>
          <td><%= score.fourth_score %>点</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2 class="mt-5">達成した役満</h2>
  <hr>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>日付</th>
        <th>役</th>
      </tr>
    </thead>
    <tbody>
      <% @grand_slums.each do |grand_slum| %>
        <tr>
          <td><%= grand_slum.date %></td>
          <td><%= grand_slum.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>