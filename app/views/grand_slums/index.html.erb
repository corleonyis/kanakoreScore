<%= render "layouts/navbar" %>
<div class="container" style="padding-top: 80px;">
  <h1>役満達成者一覧</h1>
  <hr>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>日付</th>
        <th>名前</th>
        <th>役</th>
      </tr>
    </thead>
    <tbody>
      <% @grand_slums.each do |grand_slum| %>
        <tr>
          <td><%= grand_slum.date %></td>
          <td><%= participant_name(grand_slum.participant_id) %></td>
          <td><%= grand_slum.name %></td>
          <% if logged_in? then %>
            <td><%= link_to "編集", edit_grand_slum_path(grand_slum) %></td>
          <% else %>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if logged_in? then %>
    <div class="mt-3 mb-3">
      <%= link_to "追加", new_participant_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>