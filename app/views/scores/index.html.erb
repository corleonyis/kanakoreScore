<%= render "layouts/navbar" %>
<div class="container" style="padding-top: 80px;">
  <h1>対局結果一覧</h1>
  <hr>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>対局日</th>
        <th>1位</th>
        <th></th>
        <th>2位</th>
        <th></th>
        <th>3位</th>
        <th></th>
        <th>4位</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @scores.each do |score| %>
        <tr>
          <td><%= score.date %></td>
          <td><%= participant_name(score.first_participantID) %></td>
          <td><%= score.first_score %></td>
          <td><%= participant_name(score.second_participantID) %></td>
          <td><%= score.second_score %></td>
          <td><%= participant_name(score.third_participantID) %></td>
          <td><%= score.third_score %></td>
          <td><%= participant_name(score.fourth_participantID) %></td>
          <td><%= score.fourth_score %></td>
          <% if logged_in? then %>
            <td><%= link_to "編集", edit_score_path(score) %></td>
          <% else %>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if logged_in? then %>
    <div class="mt-3 mb-3">
      <%= link_to "追加", new_participant_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
